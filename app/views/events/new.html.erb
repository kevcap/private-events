<h1>Create Event</h1>
<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div>
      <h2><%= pluralize(@event.errors.count, "error") %> prevented this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Event Title" %>

    <%= form.label :location%>
    <%= form.text_field :location, placeholder: "Where?"%>
  
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Description" %>

    <%= form.label :date, "When? :" %>
    <%= form.date_field :date %>

    <%= form.submit%>

<% end %>
