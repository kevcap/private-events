<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div>
      <h2><%= pluralize(@event.errors.count, "error") %> prevented this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-10 col-sm-offset-2 col-md-offset-4 mx-auto">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Create a new event</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, placeholder: "Event Title", class:"form-control input-sm" %>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= form.label :location%>
                <%= form.text_field :location, placeholder: "Where?", class:"form-control input-sm"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= form.label :date, "When?" %>
                <br>
                <%= form.date_field :date %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, placeholder: "Description", class:"form-control input-sm"%>
          </div>

          
          <%= form.submit%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
