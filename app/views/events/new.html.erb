<h1>Events#new</h1>
<% if @event.errors.any? %>
  <h2>The following errors prevented event from getting created</h2>
  <ul>
  <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <%end%>
  </ul>
<%end%>

<%= form_for @event do |f| %>
  <div id="form">
      <%= f.label :name, "Event name" %>
      <%= f.text_field :name %>
      
      <%= f.label :date, "When?" %>
      <%= f.date_field :date %>
      
      <%= f.label :description, "Event description" %>
      <%= f.text_field :description %>
      
      <%= f.label :location, "Where?" %>
      <%= f.text_field :location %>

      <%= f.submit "Register event" %>
  </div>
<% end %>
