<main class="container">
<h2>Listing all Events: </h1>

<p>
<%= link_to 'Create new event', new_event_path %>
</p>
<table>
<tr>
  <th>Title</th>
  <th>Description</th>
</tr>
  <% @events.each do |event|%>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= link_to 'Show', event_path(event)%></td>
    </tr>
  <%end%>
</table>
</main>