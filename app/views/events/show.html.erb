<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Event date:</strong>
  <%= @event.date %>
</p>

  <% if @not_registered and current_user %>
    <h3>
    <a href=<%= register_event_path(id: params[:id]) %> role="button">Register Now</a> 
    </h3>
  <% elsif current_user %>
    <h4>
    You already Registered for this event
    </h4>
  <% end %>

<% if  current_user and current_user.id == @event.creator_id %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>

<h2> Event Attendees </h2>

<ul>
  <% @users.each do |user| %>
   <li> <%= user.username %> </li>  
  <% end %> 
</ul>
  
