  <div id="form" class="sidenav">
          <div class="login-main-text">
              <h2>Private Events<br> Login Page</h2>
              <p>Login or register from here to access.</p>
          </div>
  </div>
        <div class="main">
         <div class="col-md-8 col-sm-12">
            <div class="login-form">
              <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
                  <div class="form-group">
                  <%= form.label :email, "Email" %>
                  <%= form.email_field :email, id:'user_email', placeholder: "Enter your email address" , class:"form-control" %>
                  </div>
                  <%= form.submit "Login", class:"btn btn-primary" %>
                  <%= link_to 'Register', new_user_path , class:"btn btn-secondary"%>
                  <% end %>
            </div>
         </div>
      </div>
      