<%= provide(:title, "User-Events") %>
<section>

    <%= link_to 'Home', root_path %>
    <h2>Events created by You </h2> 
  <div>
      <div>
        <span><%= pluralize(@events.count, "events") %></span>
      </div>
     
      <div>
        <span class="badge badge-light"> <%= pluralize(@current_user.attended_event_ids.count, "attended events") %>
        </span>
      </div>

      <div>
        <span class="badge badge-light"> <%= pluralize(@events.upcoming_events.count, "upcoming events") %>
        </span>
      </div>

      <div>
        <span><%= pluralize(@events.previous_events.count, "previous events") %></span> 
      </div>
  </div>

    <div>
      <% @events.each do |event| %>
      <div>
        <p><%= event.date %></p>
        <div>
          <p><%= event.description %></p>
          <p><%= event.location %></p>
        </div>
      </div>
      <% end %>
    </div>

  <div>
  <hr>
   <h2>Upcoming Events that you marked as atendee:</h2>
    <div>
      <% @current_user.attended_event_ids.each do |id| %>
      <div>
        <p> <%= @events.find(id).date %></p>
        <div>
          <p>Event Description: <%= @events.find(id).description %></p>
          <p>Event Location: <%= @events.find(id).location %></p>
        </div>
      </div>
      <% end %>
    </div>
  <hr>
  </div>

  <div>
    <h2>Past events that you created</h2>
    <div>
      <% @events.previous_events.each do |event| %>
      <div>
        <p><%= event.date %></p>
        <div>
          <p>Event Description: <%= event.description %></p>
          <p>Event Location: <%= event.location %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>