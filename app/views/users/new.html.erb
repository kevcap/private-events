  <div id="form" class="sidenav">
          <div class="login-main-text">
              <h2>Private Events<br> Login Page</h2>
              <p>Login or register from here to access.</p>
          </div>
  </div>
        <div class="main">
         <div class="col-md-8 col-sm-12">
            <div class="login-form">
              <%= form_for @user do |f| %>
                <% if @user.errors.any? %>
                  <div>
                    <h4><%= pluralize(@user.errors.count, "error(s)") %> prevented this user from being created:</h4>

                    <ul>
                      <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                  <div class="form-group">
                  <%= f.label :username, "Username" %>
                  <%= f.text_field :username, id: 'username', class:"form-control", placeholder:"User Name" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email, "Email" %>
                    <%= f.text_field :email, id: 'user_email', class:"form-control" , placeholder:"email" %> 
                  </div>
                  <%= f.submit "Register", class:"btn btn-secondary" %>
                  <%= link_to 'Log in', login_path , class:"btn btn-primary"%>
                  <% end %>
            </div>
         </div>
      </div>
      