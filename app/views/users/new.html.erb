<h1>Sign up</h1>
<%= form_for @user do |f| %>
  <div id="form" class="sidenav">
    <div class="login-main-text">
      <h2>Application<br> Login Page</h2>
      <p>Login or register from here to access.</p>
    </div>
    <%= f.label :username, "Username" %>
    <%= f.text_field :username, id: 'username' %>
    
    <%= f.label :email, "Email" %>
    <%= f.text_field :email, id: 'user_email' %>


    <%= link_to "I do have an account"%>
    <%= f.submit "Register" %>
  </div>
<% end %>
