<h1>Sign up</h1>
<%= link_to 'Log in', login_path %>
  <div id="form" class="sidenav">
          <div class="login-main-text">
              <h2>Application<br> Login Page</h2>
              <p>Login or register from here to access.</p>
          </div>
  </div>
        <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
              <%= form_for @user do |f| %>
                  <div class="form-group">
                  <%= f.label :username, "Username" %>
                  <%= f.text_field :username, id: 'username', class:"form-control", placeholder:"User Name" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email, "Email" %>
                    <%= f.text_field :email, id: 'user_email', class:"form-control" , placeholder:"email" %> 
                  </div>
                  <%= f.submit "Register", class:"btn btn-secondary" %>
                  <%= link_to 'Log in', login_path , class:"btn btn-black"%>
                  <% end %>
            </div>
         </div>
      </div>
      